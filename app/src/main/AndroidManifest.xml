<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.lulz.jrat.jrat">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
            android:name="org.lulz.jrat.WelcomeActivity"
            android:label="Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="org.lulz.jrat.LoginActivity"
                android:label="@string/title_activity_login"
                android:parentActivityName="org.lulz.jrat.WelcomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.lulz.jrat.WelcomeActivity"/>
        </activity>
        <activity
                android:name="org.lulz.jrat.RegisterActivity"
                android:label="@string/title_activity_register"
                android:parentActivityName="org.lulz.jrat.WelcomeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="org.lulz.jrat.WelcomeActivity"/>
        </activity>
        <activity
            android:name="org.lulz.jrat.AppHome"
            android:parentActivityName="org.lulz.jrat.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.lulz.jrat.LoginActivity"/>
        </activity>
    </application>

</manifest>