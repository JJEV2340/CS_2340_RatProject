<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:divider="?android:attr/dividerHorizontal"
              android:orientation="horizontal"
              android:showDividers="middle"
              tools:context="org.lulz.jrat.view.impl.RatSightingListActivity">

    <!--
    This layout is a two-pane layout for the RatSightings
    master/detail flow.
    
    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:id="@+id/ratsighting_list"
                                            android:name="org.lulz.jrat.view.impl.RatSightingListFragment"
                                            android:layout_width="@dimen/item_width"
                                            android:layout_height="match_parent"
                                            app:layoutManager="LinearLayoutManager"
                                            tools:context="org.lulz.jrat.view.impl.RatSightingListActivity"
                                            tools:listitem="@layout/ratsighting_list_content"
                                            android:scrollbars="vertical"/>

    <FrameLayout
            android:id="@+id/ratsighting_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>

</LinearLayout>
