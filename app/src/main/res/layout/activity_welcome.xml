<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        tools:context="org.lulz.jrat.view.impl.WelcomeActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher"
            android:id="@+id/view_logo"
            android:adjustViewBounds="true"
            style="@style/WelcomeScreenLogoStyle"
            tools:ignore="ContentDescription"/>

    <Button
            android:text="@string/action_sign_in"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_sign_in"
            android:onClick="onLoginPressed"
            style="@style/Widget.AppCompat.Button.Colored"/>

    <Button
            android:text="@string/action_sign_in_guest"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_sign_in_guest"
            android:onClick="onLoginGuestPressed"
            style="@style/Widget.AppCompat.Button.Colored"/>
</LinearLayout>
